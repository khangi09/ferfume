<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    tools:context=".Faq">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_faq"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Frequently Asked Questions"
            app:titleTextColor="?attr/colorOnPrimarySurface"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Search Bar -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_search"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search all FAQs"
                android:layout_marginBottom="16dp"
                app:endIconMode="custom"
                app:endIconDrawable="@android:drawable/ic_menu_search">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse by Category"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="12dp" />

            <!-- FAQ Categories as CardViews -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_general"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="general account"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="General / Account Questions"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="orders shipping"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Orders / Shipping"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_products"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="products inventory"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Products / Inventory"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_payments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="payments billing"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Payments / Billing"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_returns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="returns refunds"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Returns / Refunds"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_technical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:tag="technical issues app usage"
                app:cardElevation="2dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:text="Technical Issues / App Usage"
                    android:textAppearance="?attr/textAppearanceBodyLarge" />
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
