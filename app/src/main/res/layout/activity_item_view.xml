<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    tools:context=".ItemViewActivity">

    <!-- Product Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/productImageCard"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:contentDescription="Product Image" />
    </androidx.cardview.widget.CardView>

    <!-- Scrollable product details below image -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/productImageCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@android:color/white">

            <!-- Product Name -->
            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="20sp"
                android:textColor="#212121"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Product Price -->
            <TextView
                android:id="@+id/priceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="R 199"
                android:textSize="18sp"
                android:textColor="#388E3C"
                android:fontFamily="sans-serif" />

            <!-- Product Scent -->
            <TextView
                android:id="@+id/scentTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Fresh Lavender"
                android:textColor="#FF8AAE"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium" />

            <!-- Rating -->
            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:numStars="5"
                android:stepSize="1.0"
                android:isIndicator="true" />

            <!-- Description -->
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="This is a great product with long-lasting scent and smooth texture."
                android:textSize="15sp"
                android:textColor="#555555"
                android:lineSpacingExtra="6dp"
                android:fontFamily="sans-serif" />

            <!-- Divider -->
            <View
                android:id="@+id/dividerView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="#DADADA" />

            <!-- Size Label -->
            <TextView
                android:id="@+id/sizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Size"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Size Options -->
            <RadioGroup
                android:id="@+id/sizeRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" />

            <!-- Quantity Picker -->

            <!-- ADD Button -->
            <LinearLayout
                android:id="@+id/quantityLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="57dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/minusButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Minus"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_14" />

                <TextView
                    android:id="@+id/quantityTextView"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#212121"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/plusButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_button"
                    android:contentDescription="Plus"
                    android:scaleType="centerInside"
                    android:src="@drawable/img_15" />
            </LinearLayout>

            <Button
                android:id="@+id/learnMoreButton"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:text="ADD"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="@drawable/rounded_button_pink"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center_horizontal" />

            <!-- Error Message -->
            <TextView
                android:id="@+id/errorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Error loading product."
                android:textColor="@android:color/holo_red_dark"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>

    <!-- Hidden Fragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
