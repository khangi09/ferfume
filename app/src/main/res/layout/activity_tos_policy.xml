<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f0f0f0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#333333"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disclaimer"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Perfume App and its owners, developers, and associated partners provide the platform and services on an “as-is” and “as-available” basis. We make no guarantees, warranties, or representations of any kind, whether express or implied, about the accuracy, reliability, availability, or suitability of the services, information, or products offered."
            android:textSize="14sp"
            android:textColor="#DDDDDD"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use of the app is at your own risk. We are not responsible for any damages, losses, allergic reactions, or issues resulting from the use of our services or products purchased through the app. We do not guarantee delivery times, product quality, or that the app will function error-free at all times."
            android:textSize="14sp"
            android:textColor="#DDDDDD"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By using the app, you acknowledge and agree that neither we nor any of our partners, affiliates, or contributors shall be held liable for any direct, indirect, incidental, or consequential damages."
            android:textSize="14sp"
            android:textColor="#DDDDDD"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you have any problems regarding this application, please contact us via email."
            android:textSize="14sp"
            android:textColor="#DDDDDD"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#555555"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email ID"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="nilkanthpawan@gmail.com"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/button_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#4CAF50"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:layout_marginEnd="16dp"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

            <Button
                android:id="@+id/button_decline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:backgroundTint="#F44336"
                android:paddingVertical="12dp"
                android:paddingHorizontal="32dp"
                android:textAllCaps="false"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:minWidth="0dp"
                android:minHeight="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:id="@+id/checkbox_remember"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#777777" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember my decision"
                android:textSize="14sp"
                android:textColor="#777777" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
